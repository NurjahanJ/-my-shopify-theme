<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="crochet-testimonials-section section section--full-width color-{{ section.settings.color_scheme }}">
  <div class="section-content-wrapper spacing-style size-style border-style" 
       style="{% render 'spacing-style', settings: section.settings %}">
    
    <div class="crochet-testimonials__container">
      {% if section.settings.heading != blank %}
        <h2 class="crochet-testimonials__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="crochet-testimonials__description">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      <div class="crochet-testimonials__grid">
        {% for block in section.blocks %}
          <div class="crochet-testimonials__item" {{ block.shopify_attributes }}>
            <div class="crochet-testimonials__stars">
              {% for i in (1..5) %}
                <span class="star">â˜…</span>
              {% endfor %}
            </div>
            
            {% if block.settings.quote != blank %}
              <blockquote class="crochet-testimonials__quote">
                "{{ block.settings.quote }}"
              </blockquote>
            {% endif %}
            
            <div class="crochet-testimonials__author">
              {% if block.settings.author_image != blank %}
                <div class="crochet-testimonials__author-image">
                  {{ block.settings.author_image | image_url: width: 60 | image_tag: alt: block.settings.author_name }}
                </div>
              {% endif %}
              
              <div class="crochet-testimonials__author-info">
                {% if block.settings.author_name != blank %}
                  <cite class="crochet-testimonials__author-name">{{ block.settings.author_name }}</cite>
                {% endif %}
                
                {% if block.settings.author_title != blank %}
                  <p class="crochet-testimonials__author-title">{{ block.settings.author_title }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .crochet-testimonials-section {
    padding: 80px 0;
    background: linear-gradient(135deg, rgba(139, 75, 140, 0.05) 0%, rgba(255, 255, 255, 0.1) 100%);
  }
  
  .crochet-testimonials__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  
  .crochet-testimonials__heading {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--color-foreground));
  }
  
  .crochet-testimonials__description {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: rgb(var(--color-foreground));
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .crochet-testimonials__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .crochet-testimonials__item {
    padding: 2.5rem;
    border-radius: 16px;
    background: rgba(var(--color-background), 0.9);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: left;
  }
  
  .crochet-testimonials__item:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }
  
  .crochet-testimonials__stars {
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .star {
    color: #FFD700;
    font-size: 1.5rem;
    margin: 0 2px;
  }
  
  .crochet-testimonials__quote {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    color: rgb(var(--color-foreground));
    font-style: italic;
    border: none;
    padding: 0;
  }
  
  .crochet-testimonials__author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .crochet-testimonials__author-image {
    flex-shrink: 0;
  }
  
  .crochet-testimonials__author-image img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .crochet-testimonials__author-name {
    font-weight: 600;
    color: rgb(var(--color-primary));
    font-size: 1.1rem;
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .crochet-testimonials__author-title {
    font-size: 0.9rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .crochet-testimonials__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .crochet-testimonials__heading {
      font-size: 2rem;
    }
    
    .crochet-testimonials__item {
      padding: 2rem;
    }
  }
{% endstylesheet %}

