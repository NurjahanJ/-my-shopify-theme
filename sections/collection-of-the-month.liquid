{% comment %}
Collection of the Month Section
Displays featured products in a grid layout similar to the catalog page
{% endcomment %}

<div class="collection-of-the-month section section--full-width color-{{ section.settings.color_scheme }}" style="background-color: #3d1a0f !important;">
  <div class="section-content-wrapper spacing-style size-style border-style" 
       style="{% render 'spacing-style', settings: section.settings %}">
    
    <div class="collection-month__container">
      {% if section.settings.heading != blank %}
        <h2 class="collection-month__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="collection-month__description">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% assign collection = collections[section.settings.collection] %}
      {% if collection != blank and collection.products.size > 0 %}
        <ul class="product-grid product-grid--collection-month product-grid--grid" 
            role="list" 
            data-product-card-size="medium">
          
          {% assign products_to_show = section.settings.products_to_show | default: 4 %}
          {% for product in collection.products limit: products_to_show %}
            <li class="product-grid__item product-grid__item--{{ forloop.index0 }}" 
                data-product-id="{{ product.id }}">
              
              <div class="product-card-simple">
                <a href="{{ product.url }}" class="product-card-link">
                  {% if product.featured_media %}
                    <div class="product-image">
                      <img src="{{ product.featured_media | image_url: width: 400 }}" 
                           alt="{{ product.featured_media.alt | escape }}"
                           width="400"
                           height="400"
                           loading="lazy">
                    </div>
                  {% endif %}
                  
                  <div class="product-info">
                    <h3 class="product-title">{{ product.title }}</h3>
                    <div class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="price-sale">{{ product.price | money }}</span>
                        <span class="price-compare">{{ product.compare_at_price | money }}</span>
                      {% else %}
                        <span class="price-regular">{{ product.price | money }}</span>
                      {% endif %}
                    </div>
                  </div>
                </a>
              </div>
              
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <div class="collection-month__empty">
          <p>No products found in the selected collection.</p>
        </div>
      {% endif %}

      {% if section.settings.show_view_all and collection != blank %}
        <div class="collection-month__view-all">
          <a href="{{ collection.url }}" class="button button--primary">
            {{ section.settings.button_label | default: 'View All Products' }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .collection-of-the-month {
    background: #3d1a0f;
    padding: clamp(60px, 8vw, 100px) 20px;
  }

  .collection-month__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .collection-month__heading {
    font-size: clamp(2.5rem, 5vw, 3rem);
    color: #ffffff;
    font-weight: 400;
    font-family: serif;
    text-align: center;
    margin-bottom: 3rem;
  }

  .collection-month__description {
    font-size: 1.1rem;
    color: #f5f2ee;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
    opacity: 0.9;
  }

  .product-grid--collection-month {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .collection-month__view-all {
    text-align: center;
    margin-top: 2rem;
  }

  .collection-month__empty {
    text-align: center;
    padding: 3rem 1rem;
    color: #f5f2ee;
    opacity: 0.7;
  }

  .product-card-simple {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card-simple:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .product-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card-simple:hover .product-image img {
    transform: scale(1.05);
  }

  .product-info {
    padding: 1rem;
  }

  .product-title {
    font-size: 1rem;
    font-weight: 600;
    color: #5d4037;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .product-price {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .price-regular {
    font-size: 1rem;
    font-weight: 600;
    color: #d84315;
  }

  .price-sale {
    font-size: 1rem;
    font-weight: 600;
    color: #d84315;
  }

  .price-compare {
    font-size: 0.9rem;
    color: #6d4c41;
    text-decoration: line-through;
    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    .product-grid--collection-month {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .collection-of-the-month {
      padding: clamp(40px, 6vw, 60px) 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Collection of the Month",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Collection of the Month",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our handpicked selection of premium crochet kits for this month</p>"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select the collection to feature"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show second product image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show product vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "default": true,
      "label": "Show quick add button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "View All Products",
      "label": "Button label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection of the Month"
    }
  ]
}
{% endschema %}
